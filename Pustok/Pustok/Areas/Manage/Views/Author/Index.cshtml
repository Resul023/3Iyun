
@model AuthorViewModel
@{
    ViewData["Title"] = "Index";
    int count = 0;
}


<container>
    <row>
        <div class="col-md-10 mx-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">FullName</th>
                        <th scope="col">Age</th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (Authors aut in Model.Authors)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@aut.FullName</td>
                            <td>@aut.Age</td>

                        </tr>
                        
                    }


                </tbody>
            </table>
        </div>
    </row>
</container>

